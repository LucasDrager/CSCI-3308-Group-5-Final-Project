<base href="../../resources/css/tripdisplay.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

<div class="modal" tabindex="-1" id="event-modal">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form class="row g-3">
            <div class="col-md-4">
              <label for="event_name" class="form-label">[Trip Name]</label>
              <div class="card">
                <div class="card-body" id="TripName"></div>
              </div>
            </div>
            <div class="col-md-4">
              <label for="weekday" class="form-label">Driver</label>
              <div class="card">
                <div class="card-body" id="TripDriver"></div>
              </div>
            </div>
            <div class="col-md-6" id="locationHolder">
              <label for="location" class="form-label">From</label>
              <div class="card">
                <div class="card-body" id="LocationFrom"></div>
              </div>
            </div>
            <div class="col-md-6" id="locationHolder">
              <label for="location" class="form-label">To</label>
              <div class="card">
                <div class="card-body" id="LocationTo"></div>
              </div>
            </div>
            <div class="mb-3">
              <label for="attendees" class="form-label">Attendees</label>
              <div class="card">
                <div class="card-body" id="Attendees"></div>
              </div>
            </div>
            <div id="mapDiv">
            </div>
          </form>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>