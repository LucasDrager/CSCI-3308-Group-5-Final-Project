<body>
<style>
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 0;
  padding: 0;
}

main {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

#chat-container {
  height: 300px;
  overflow-y: scroll;
  border: 1px solid #ddd;
  padding: 10px;
  margin-bottom: 10px;
}

#message-input {
  display: flex;
  align-items: center;
}

textarea {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-right: 10px;
}

button {
  padding: 10px 20px;
  cursor: pointer;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 5px;
}

button:hover {
  background-color: #45a049;
}

#chat-list {
  max-width: 200px; /* Set a maximum width for the chat list */
  margin: 20px;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 10px;
}

.chat-item {
  cursor: pointer;
  padding: 10px;
  margin-bottom: 5px;
  border-radius: 5px;
  background-color: #e0e0e0;
  transition: background-color 0.3s ease;
}

.chat-item:hover {
  background-color: #d0d0d0;
}
#Title{
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
}

</style>
  <script>
    function createChatID(name1, name2) {
      for (let i = 0; i < Math.min(name1.length, name2.length); i++) {
        if (name1[i] < name2[i]) {
          return name1 + name2;
        } else if (name1[i] > name2[i]) {
          return name2 + name1;
        }
      }
      return name1 + name2;
    }
function goBack() {
  document.getElementById('chat-list').style.display = 'block';  
  document.getElementById('messaging-container').style.display = 'none';
  document.getElementById('back-button').style.display = 'none';
  };

  const sendMessage = () => {
    const messageText = document.getElementById('message-text').value;

    fetch('/messages1', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            message_text: messageText,
            sender: 'a',
            receiver: 'Testerson',
            chats_id: createChatID('a', 'Testerson'),
            sent_at: new Date()
        })
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        // Handle the data after a successful response
        console.log('Message sent successfully:', data);
    })
    .catch(error => {
        console.error('Error sending message:', error);
    });

    openChat(1);
};
const getChats  = () => {
  fetch('/chats').then(res => res.json()).then(data => {
    const chatList = document.getElementById('chat-list');
    chatList.innerHTML = '';
    data.forEach(chat => {
      console.log(chat);
      const chatItem = document.createElement('div');
      chatItem.innerHTML = `

      <div class="chat-item" onclick="openChat('${createChatID(chat.user1,chat.user2)}')">Chat with ${chat.user1}</div>
      `;
     
      chatList.appendChild(chatItem);
    });
  });
    }


      
        
        const openChat = (chat_Id) => {
  fetch('/messages?chats_id = Hello ')
    .then(res => res.json()).then(data => {
      document.getElementById('chat-list').style.display = 'none';
      document.getElementById('messaging-container').style.display = 'block';
      document.getElementById('back-button').style.display = 'block';
      document.getElementById('message-text').focus();
      
      const chatContainer = document.getElementById('chat-container');
      chatContainer.innerHTML = '';
      data.forEach(message => {
        const chatItem = document.createElement('div');
        chatItem.classList.add('chat-item');
        chatItem.innerHTML = `
          <div class="chat-item-content">
            <div class="chat-meta">${message.sender}:</div>
            <div class="chat-message">${message.message_text}</div>
          </div>
        `;
        chatContainer.appendChild(chatItem);
      });
       

    });

 
};


  </script>

    <h2 id="Title">Messaging</h2>
    <main>
      <button onclick="getChats()">Refresh</button>
    
      <section id="chat-list">
        <div class="chat-item" onclick="openChat(1)">Chat 1</div>
        <div class="chat-item" onclick="openChat(2)">Chat 2</div>
        
      </section>
      <section id="messaging-container" style="display: none">
        <section id="message-input">
          <textarea id="message-text" placeholder="Type your message..."></textarea>
          <!-- <button onclick="sendMessage()" >Send</button> -->
        </section>
        
        <section id="chat-container">
         
            <% var Data = {text: 'Hello'}; %>
            <% for(var i=0; i < Data.length; i++) { %>
              <div class="chat-container" id="card-<%=i%>">
                <div class="chat-item">
                  <div class="chat-item-content">
                    <div class="chat-meta">Adithya:</div>
                    <div class="chat-message"><%=Data[i].text%></div>
                  </div>
                </div>
              </div>
            <% } %>
          
        </section>
      </section>
    </main>
