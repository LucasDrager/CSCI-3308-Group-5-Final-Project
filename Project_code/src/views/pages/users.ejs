<%- include('../partials/header') %>
<%- include('../partials/menu') %> 

<head>
    <link rel="stylesheet" href="../../resources/css/users.css">
</head>
<h2 id="Title">Buddies</h2>
<main>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Profile</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td>
                        <a href="/profile/<%= user.username %>" class="btn btn-primary">View Profile</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</main>
<%- include('../partials/footer') %>